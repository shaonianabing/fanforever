@import "../../buyTemplate/shopcar.wxss";
@import "../../cssTemplate/goodsDetail.wxss";
.page { 
    background-color: rgba(255,255,255,1);  
}

.moreTime{
    margin-right: 13.5rpx;
    float: right;
    width: 230rpx;
    height: 64rpx;
}

.price{
    margin-top: 45rpx;
    margin-right: 0rpx;
    float: right;
}

/* 确定按钮 */
.confirm{
    position: absolute;
    width: 100%;
    left: 0;
    bottom: 0;
    color: white;
    background-color: #ff6317;
    border-radius: 0;
}
.buy-now{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}
.rush{
    color: white;
    background-color: #2fa7e0;
    border-radius: 0;
}
.item-detail{
    margin: 0 -20rpx;
}
.detail-title{
    height: 100rpx;
    line-height: 100rpx;
    color: #2fa7e0;
    border-top: 20rpx solid #f2f2f2;
    border-bottom: 1px solid #f2f2f2;
    text-align: center;
    font-size: 28rpx;
}
.detail-goods{
    font-size: 0;
    box-sizing: border-box;
}
.disabled{
    pointer-events: none;
    background: gray;
}
.detail-img{
    width: 100%;
}

.nature{
    height: 110rpx;
    margin-top: 30rpx;
    border-bottom: 1px solid #e5e5e5;
}

.priceClass{
    color: #ff5408;
}
/*button*/
.btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #000;
  color: #fff;
}
 
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
 
/*content*/
.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}
 
.drawer_title{
  padding:15px;
  font: 20px "microsoft yahei";
  text-align: center;
  font-style:oblique;
}
.drawer_content {
  height: 210px;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}
 
.btn_ok{
  padding: 10px;
  font: 20px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #E8E8EA;
  color: #3CC51F;
}
 
.top{
	padding-top:8px;
}
.bottom {
	padding-bottom:8px;
}
.title {
	height: 30px;
	line-height: 30px;
	width: 160rpx;
	text-align: center;
	display: inline-block;
	font: 300 28rpx/30px "microsoft yahei";
}
 
.input_base {
	border: 2rpx solid #ccc;
	padding-left: 10rpx;
	margin-right: 50rpx;
}
.input_h30{
	height: 30px;
	line-height: 30px;
}
.input_h60{
	height: 60px;
}
.input_view{
	font: 12px "microsoft yahei";
	background: #fff;
	color:#000;
	line-height: 30px;
}
 
input {
	font: 12px "microsoft yahei";
	background: #fff;
	color:#000 ;
}
radio{
	margin-right: 20px;
}
.grid { display: -webkit-box; display: box; }
